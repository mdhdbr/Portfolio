    align-items: center;
    transition: transform 0.3s ease;
  }

  .cube-toggle:hover {
    transform: scale(1.05);
  }

  .left-cube {
    left: 20px;
  }

  .right-cube {
    right: 20px;
  }

  .cube-container {
    width: 60px;
    height: 60px;
    position: relative;
    transform-style: preserve-3d;
    animation: rotateCube 15s infinite linear;
  }

  .cube {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
